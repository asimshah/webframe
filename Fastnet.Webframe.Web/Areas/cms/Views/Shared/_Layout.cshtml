@using Fastnet.Common
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <base href="@Url.Content("~/")" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/site/css")
    @Styles.Render("~/Content/cms/css")

</head>
<body>
    <div class="fastnet-error-panel hide">

    </div>
    <div class="SitePanel">
        <div class="BannerPanel"></div>
        <div class="AppPanel container">
            @RenderBody()
        </div>
        <div class="forms-container">
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/fastnet/utils")
    @RenderSection("scripts", required: false)
    @if (ApplicationSettings.Key("ClientSideLog", false) == true)
    {
        <script>
            $(function () {
                $.fastnet$utilities.EnableClientSideLog();
            });
        </script>
    }
</body>
</html>
